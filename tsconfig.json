{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "types",
    "lib": ["es6"],
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
